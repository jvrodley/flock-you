[Unit]
Description=Flock Camera Detector
After=multi-user.target
Conflicts=getty@tty1.service

[Service]
Type=simple
User=rodley
ExecStart=/bin/bash /home/rodley/flock-you/flockit.sh
Restart=always
WorkingDirectory=/home/rodley/flock-you
Nice=19
LimitNOFILE=16384
StandardInput=tty-force

[Install]
WantedBy=multi-user.target
