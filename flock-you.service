[Unit]
Description=Flock Camera Detector
After=multi-user.target
Conflicts=getty@tty1.service

[Service]
Type=simple
User=root
Group=root
ExecStart=/bin/sh /usr/rodley/flockit-you/flockit.sh
Restart=always
WorkingDirectory=/usr/rodley/flock-you
Nice=19
LimitNOFILE=16384
StandardInput=tty-force

[Install]
WantedBy=multi-user.target